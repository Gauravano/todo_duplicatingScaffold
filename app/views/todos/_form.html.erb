<% if @todo.errors %>
<% @todo.errors.messages.each do |key,value| %>

<h1><%= key %> , <%= value %></h1>
<% end %>
<% end %>

<%= form_for @todo do |f| %>

<%= f.label :title %>
<%= f.text_field :title %><br>

<%= f.label :content %>
<%= f.text_area :content %><br>

<%= f.label :Important %>
<%= f.check_box :important %>

<%= f.label :Urgent %>
<%= f.check_box :urgent %><br>

<%= f.label :Deadline %>
<%= f.datetime_select :deadline %><br>

<%= f.submit %>
<% end %>
